@using ElectronicMarket.Domain.Models.Shop;
@model Cart
@{
    ViewData["Title"] = "Корзина";

}
<div class="container">

    <h1>Корзина</h1>
    <h2>Ваш заказ: <strong>Итого к оплате</strong> @(Model.Products.Sum(p=>p.Price)) руб.</h2>

    <div class="row g-2 my-5">



        @foreach (var cartItem in Model.Products)
        {
            <div class="col-12">
                <div class="card">
                    <div class="card-body row g-0 justify-content-start">
                        <div class="col-1">
                            <img class="img-fluid" width="80px" src="@cartItem.ImgUrl" />
                        </div>
                        <div class="col-9">
                            <div class="h5">@cartItem.Name</div>
                            <div class="fw-bold">@cartItem.Price руб.</div>
                            <div>
                                <form asp-action="RemoveItem" asp-route-productId="@cartItem.Id" method="post">
                                    <button type="submit" class="btn bi-dash-circle text-danger me-3"></button>
                                    <span class="fs-6">1</span>
                                    <i class="btn bi-plus-circle text-success ms-3"></i>
                                </form>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        }



    </div>
    <form asp-action="CreateOrder">

        <div class="row g-3 justify-content-end">

            <div class="col-12 col-md-4">
                
                <button type="button" class="btn btn-accent form-control" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Оформить заказ
                </button>
            </div>
        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Спасибо за покупку</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        С вами скоро свяжется оператор!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-accent" data-bs-dismiss="modal">Хорошо</button>
                        
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
