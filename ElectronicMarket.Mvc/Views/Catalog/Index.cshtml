@using ElectronicMarket.Domain.Models.Shop;
@model IEnumerable<Product>

@{
    ViewData["Title"] = "Home Page";
   
}

<div>
    <h2 class="d-flex justify-content-center" style="margin-top:100px; margin-bottom:100px;">
        Каталог
    </h2>
     <div class="row">
        <div >

            <div class="row justify-content-center">
                @foreach (var cat in Model)
                {
                    <div class="col-md-4 " style="text-align:center;">
                        <a asp-controller="Catalog" asp-action="Index" asp-route-id="@cat.Id" class="nav-link fs-3 text-center text-decoration-none">
                            <div style="height:200px;">
                                <img class="img-fluid" src="@cat.ImgUrl" />
                            </div>
                            @cat.Name
                        </a>
                    </div>
                }
            </div>
         </div>
     </div>
    
</div> 