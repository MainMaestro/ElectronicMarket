<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ElectronicMarket.Mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElectronicMarket.Mvc.styles.css" asp-append-version="true" />
    </head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/group2892.jpg" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Catalog" asp-action="Index">Каталог</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">О компании</a>
                        </li>
                    </ul>
                    
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="flex-fill">
        <main role="main" class="pb-3 overflow-x-hidden " style="margin-bottom:150px;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top  text-muted bg-black sticky-bottom position-relative" >

        <div class="p-3 d-flex align-items-center">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/group2892.jpg" style="border-radius:10px;" /></a>
            <div class=" navbar-collapse collapse d-sm-inline-flex justify-content-between ps-2">
                    <ul class="navbar-nav flex-grow-1 " style="display: -webkit-inline-box;">
                        <li class="nav-item px-2 ">
                        <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="Index">Главная</a>
                        </li>
                        <li class="nav-item px-2 "> 
                        <a class="nav-link text-secondary" asp-area="" asp-controller="Catalog" asp-action="Index">Каталог</a>
                        </li>
                         <li class="nav-item px-2 ">
                        <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="About">О компании</a>
                        </li>
                    <li class="nav-item px-2 ">
                        <a class="nav-link text-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
                    </li>
                    </ul>
            </div>
            <div class="d-flex align-items-center">
                <div class="d-flex align-items-center me-3">
                    <img class="me-2" src="~/телефон.svg" />
                    8(800)5553535
                </div>
                <div class="d-flex align-items-center mx-2">
                    <img src="~/instagram.svg" />
                   
                </div><div class="d-flex align-items-center">
                    <img src="~/whatsapp.svg" />
                    
                </div><div class="d-flex align-items-center mx-2 me-4">
                    <img src="~/telegram.svg" />
                    
                </div>
                <div class="d-flex align-items-center ">
                    <img class="me-2" src="~/mail.svg" />
                   ElectronicMarket@gmail.com
                </div>
            </div>
        </div>
        
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
